<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 🔹 Judul -->
        <TextView
            android:id="@+id/tvCheckoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout 🛍️"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 🔹 Input alamat -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Pengiriman"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan alamat lengkap..."
            android:backgroundTint="@color/teal_400"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- 🔹 Daftar isi keranjang -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Keranjang"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCheckoutCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp" />

        <!-- 🔹 Catatan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan untuk Penjual"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tulis pesan untuk penjual (opsional)..."
            android:backgroundTint="@color/teal_200"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- 🔹 Rincian Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_600" />
        </LinearLayout>

        <!-- 🔹 Tombol Bayar -->
        <Button
            android:id="@+id/btnPayNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bayar Sekarang 💳"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/teal_400"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
