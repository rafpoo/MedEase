<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header_doctor"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_consultation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konsultasi Pasien"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_consultation_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar percakapan pasien Anda"
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_chat_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" />

</LinearLayout>
