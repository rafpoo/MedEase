<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FAFA"
    android:padding="20dp">

    <!-- ðŸŒŸ Card utama -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ðŸ”¹ Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make Appointment"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ ScrollView untuk isi form -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:overScrollMode="ifContentScrolls"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Kategori -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Category"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner"
                        android:layout_marginBottom="16dp" />

                    <!-- Dokter -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Doctor"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerDoctor"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner"
                        android:layout_marginBottom="16dp" />

                    <!-- Info Dokter -->
                    <LinearLayout
                        android:id="@+id/layoutDoctorInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_outline_button"
                        android:visibility="gone"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgDoctor"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="@color/teal_700"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/bg_card_rounded"
                            android:padding="4dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDoctorName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Doctor Name"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvDoctorCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Specialty"
                                android:textColor="#555" />

                            <TextView
                                android:id="@+id/tvDoctorDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Doctor description..."
                                android:textSize="13sp"
                                android:textColor="#777"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Pilih Tanggal -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvPickDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp"
                        android:text="Tap to pick a date"
                        android:textColor="#777"
                        android:drawableEnd="@android:drawable/ic_menu_today"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Pilih Waktu -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Time"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerTime"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner"
                        android:layout_marginBottom="16dp" />

                    <!-- Catatan Diagnosa -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diagnose"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                    android:id="@+id/etNote"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:hint="Write any notes or special requests..."
                    android:background="@drawable/bg_outline_button"
                    android:padding="12dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:maxLines="6" />
                </LinearLayout>
            </ScrollView>

            <!-- Tombol Konfirmasi -->
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Appointment"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/teal_400"
                android:textAllCaps="false"
                android:elevation="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
