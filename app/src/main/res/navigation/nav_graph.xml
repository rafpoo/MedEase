<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <!-- 🏠 Dashboard -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.medease.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_dashboardFragment_to_orderMedsFragment"
            app:destination="@id/orderMedsFragment" />

        <action
            android:id="@+id/action_dashboardFragment_to_makeAppointmentFragment"
            app:destination="@id/makeAppointmentFragment" />

        <action
            android:id="@+id/action_dashboardFragment_to_manageAppointmentFragment"
            app:destination="@id/manageAppointmentFragment" />

        <action
            android:id="@+id/action_dashboardFragment_to_KonsulOnlineFragment"
            app:destination="@id/konsulOnlineFragment"/>
    </fragment>

    <!-- 💊 Order Obat -->
    <fragment
        android:id="@+id/orderMedsFragment"
        android:name="com.example.medease.ui.order.OrderMedsFragment"
        android:label="Order Obat">
        <action
            android:id="@+id/action_orderMeds_to_checkout"
            app:destination="@id/checkoutFragment" />
    </fragment>

    <!-- 🧾 Checkout -->
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.medease.ui.order.CheckoutFragment"
        android:label="Checkout">
        <action
            android:id="@+id/action_checkout_to_orderStatus"
            app:destination="@id/orderStatusFragment" />
    </fragment>

    <!-- ✅ Status Pesanan -->
    <fragment
        android:id="@+id/orderStatusFragment"
        android:name="com.example.medease.ui.order.OrderStatusFragment"
        android:label="Status Pesanan"
        tools:layout="@layout/fragment_order_status" />

    <!-- 🗓️ Buat Janji -->
    <fragment
        android:id="@+id/makeAppointmentFragment"
        android:name="com.example.medease.ui.appointment.MakeAppointmentFragment"
        android:label="Buat Janji"
        tools:layout="@layout/fragment_make_appointment" />

    <!-- 📋 Kelola Appointment -->
    <fragment
        android:id="@+id/manageAppointmentFragment"
        android:name="com.example.medease.ui.appointment.ManageAppointmentFragment"
        android:label="Manage Appointment"
        tools:layout="@layout/fragment_manage_appointment">

        <action
            android:id="@+id/action_manageAppointmentFragment_to_editAppointmentFragment"
            app:destination="@id/editAppointmentFragment" />
    </fragment>

    <!-- ✏️ Edit Appointment -->
    <fragment
        android:id="@+id/editAppointmentFragment"
        android:name="com.example.medease.ui.appointment.EditAppointmentFragment"
        android:label="Edit Appointment"
        tools:layout="@layout/fragment_edit_appointment">
        <argument
            android:name="appointmentId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/konsulOnlineFragment"
        android:name="com.example.medease.ui.appointment.KonsulOnlineFragment"
        android:label="Konsultasi Online"
        tools:layout="@layout/fragment_konsul_online" />

</navigation>
